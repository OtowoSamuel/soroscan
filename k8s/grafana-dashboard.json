{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "Prometheus datasource connected to SoroScan metrics endpoint",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "9.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "1.0.0" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" },
    { "type": "panel", "id": "table", "name": "Table", "version": "" }
  ],
  "annotations": { "list": [] },
  "description": "SoroScan performance monitoring â€” API latencies, Celery tasks, slow queries",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "title": "API Latency",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "lineWidth": 1, "fillOpacity": 10 },
          "unit": "s"
        }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 1 },
      "id": 1,
      "options": { "tooltip": { "mode": "multi" } },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(django_http_requests_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(django_http_requests_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(django_http_requests_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99"
        }
      ],
      "title": "API Request Latency (p50/p95/p99)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": { "unit": "reqps" }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 1 },
      "id": 2,
      "targets": [
        {
          "expr": "sum(rate(django_http_requests_total_by_view_transport_method_total[5m])) by (view)",
          "legendFormat": "{{view}}"
        }
      ],
      "title": "Request Rate by View",
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
      "id": 101,
      "title": "Rate Limiting",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "unit": "short" } },
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 10 },
      "id": 3,
      "targets": [
        {
          "expr": "sum(rate(django_http_responses_total_by_status_total{status=\"429\"}[5m]))",
          "legendFormat": "429 Rate Limited"
        }
      ],
      "title": "Rate Limit Rejections (429/s)",
      "type": "timeseries"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 16 },
      "id": 102,
      "title": "Celery Tasks",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "unit": "short" } },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 17 },
      "id": 4,
      "targets": [
        {
          "expr": "sum(rate(celery_tasks_total[5m])) by (name, state)",
          "legendFormat": "{{name}} [{{state}}]"
        }
      ],
      "title": "Celery Task Rate by Name",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "unit": "s" } },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 17 },
      "id": 5,
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(celery_task_runtime_seconds_bucket[5m])) by (le, name))",
          "legendFormat": "p95 {{name}}"
        }
      ],
      "title": "Celery Task Runtime p95",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "unit": "short", "color": { "mode": "thresholds" },
        "thresholds": { "mode": "absolute", "steps": [
          { "color": "green", "value": null },
          { "color": "yellow", "value": 10 },
          { "color": "red", "value": 50 }
        ] }
      } },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 25 },
      "id": 6,
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [
        {
          "expr": "celery_worker_tasks_active",
          "legendFormat": "Active Tasks"
        }
      ],
      "title": "Celery Active Tasks",
      "type": "stat"
    },
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 29 },
      "id": 103,
      "title": "Database",
      "type": "row"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "unit": "s" } },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 30 },
      "id": 7,
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(django_db_execute_many_duration_seconds_bucket[5m])) by (le, vendor))",
          "legendFormat": "p95 DB {{vendor}}"
        }
      ],
      "title": "DB Query Latency p95",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": { "defaults": { "unit": "short" } },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 30 },
      "id": 8,
      "targets": [
        {
          "expr": "sum(rate(django_db_errors_total[5m])) by (type)",
          "legendFormat": "DB Error {{type}}"
        }
      ],
      "title": "DB Errors/s",
      "type": "timeseries"
    }
  ],
  "refresh": "30s",
  "schemaVersion": 37,
  "tags": ["soroscan", "performance"],
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "SoroScan Performance",
  "uid": "soroscan-perf-v1",
  "version": 1
}
